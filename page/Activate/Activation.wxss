.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.search {
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  align-items: center;
}

.searchItem {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  align-items: center;
  background: #fff;
}

.searchItem title {
  margin-left: 30rpx;
  font-size: 36rpx;
}

.searchItem input {
  margin-left: 50rpx;
  font-size: 36rpx;
}
